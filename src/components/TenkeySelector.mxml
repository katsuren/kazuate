<?xml version="1.0" encoding="utf-8"?>
<comp:AbstractSelector  xmlns:fx="http://ns.adobe.com/mxml/2009"
                        xmlns:s="library://ns.adobe.com/flex/spark"
                        xmlns:mx="library://ns.adobe.com/flex/mx"
                        xmlns:comp="components.*"
                        width="160" height="200"
                        >

  <fx:Script>
    <![CDATA[
      import flash.events.MouseEvent;
      import spark.components.Button;

      private function clickHandler(e:MouseEvent):void
      {
        select(Button(e.currentTarget).label);
      }
    ]]>
  </fx:Script>

  <s:VGroup
      width="100%" height="100%"
      horizontalAlign="center"
      verticalAlign="middle"
      >
    <s:HGroup
        width="100%" height="40"
        horizontalAlign="center"
        verticalAlign="middle"
        >
      <s:Button
          label="1"
          width="40" height="40"
          click="clickHandler(event)" />
      <s:Button
          label="2"
          width="40" height="40"
          click="clickHandler(event)" />
      <s:Button
          label="3"
          width="40" height="40"
          click="clickHandler(event)" />
    </s:HGroup>
    <s:HGroup
        width="100%" height="40"
        horizontalAlign="center"
        verticalAlign="middle"
        >
      <s:Button
          label="4"
          width="40" height="40"
          click="clickHandler(event)" />
      <s:Button
          label="5"
          width="40" height="40"
          click="clickHandler(event)" />
      <s:Button
          label="6"
          width="40" height="40"
          click="clickHandler(event)" />
    </s:HGroup>
    <s:HGroup
        width="100%" height="40"
        horizontalAlign="center"
        verticalAlign="middle"
        >
      <s:Button
          label="7"
          width="40" height="40"
          click="clickHandler(event)" />
      <s:Button
          label="8"
          width="40" height="40"
          click="clickHandler(event)" />
      <s:Button
          label="9"
          width="40" height="40"
          click="clickHandler(event)" />
    </s:HGroup>
    <s:HGroup
        width="100%" height="40"
        horizontalAlign="center"
        verticalAlign="middle"
        >
      <mx:Spacer width="40" />
      <mx:Spacer width="40" />
      <s:Button
          label="0"
          width="40" height="40"
          click="clickHandler(event)" />
    </s:HGroup>
  </s:VGroup>
</comp:AbstractSelector>
